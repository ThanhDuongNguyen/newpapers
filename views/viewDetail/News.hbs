<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 text-justify">
      <!-- Blog Detail -->
      <div class="blog-detail">
        {{#each this.News}}
        <h3 class="mt-2">
          {{{Title}}}
        </h3>
        {{/each}}
        <span class="most_fh5co_treding_font_123">by</span>
        <a href="#" class="most_fh5co_treding_font_123 d-inline-block">
          {{this.author.Name}}
        </a>
        {{#each this.News}}
        <span class="">
          <span class="most_fh5co_treding_font_123">-</span>

          <span class="most_fh5co_treding_font_123">
            {{Day}}
          </span>
        </span>

        <span class="most_fh5co_treding_font_123">
          {{View}}
        </span>

        <div class="mb-2">
          <img src="{{ImgAvatar}}" alt="IMG" class="w-100 h-100">
        </div>

        <p class="text-justify">
          {{{Content}}}
        </p>
        {{/each}}

        <!-- Tag -->
        <div class="d-flex align-items-center">
          <span class="mr-3">
            Tags:
          </span>
          {{#each this.listTags}}
          <div class="recommend-tag">
            <a href="/Tags/{{IDTags}}" class="fh5co_tagg">
              {{TagName}}
            </a>
          </div>
          {{/each}}
        </div>

        <!-- Share -->
        <div class="d-flex align-items-center mb-3">
          <span class="mr-3">
            Share:
          </span>

          <div class="">
            <a href="#" class="fh5co_tagg bg-facebook">
              <i class="fa fa-facebook" aria-hidden="true"></i>
              Facebook
            </a>

            <a href="#" class="fh5co_tagg bg-twitter">
              <i class="fa fa-twitter" aria-hidden="true"></i>
              Twitter
            </a>

            <a href="#" class="fh5co_tagg bg-google">
              <i class="fa fa-google-plus" aria-hidden="true"></i>
              Google+
            </a>
          </div>
        </div>
      </div>

      <!-- Leave a comment -->
      <div id="Comment">
        <h4 class="Comment">
          Leave a Comment
        </h4>

        <p class="most_fh5co_treding_font_123">
          Your email address will not be published. Required fields are marked *
        </p>

        <form method="POST" class="form-comment">
          <textarea name="Comment" placeholder="Comment..." name="txtContent"></textarea>
          <button class="btn btn-success mt-2 mb-2" type="submit">
            Post Comment
          </button>
        </form>
      </div>
      <h3 class="pt-3 pb-3">Commented</h3>
      {{!-- View comment --}}
      <div class="container pb-5">
        <div class="row">
          <div class="col-sm-3 d-flex align-items-center justify-content-center">
            <img src="../../public/images/download (1).jpg" class="avatar-comment" alt="">
          </div>
          <div class="col-sm-9 d-flex justify-content-start comment-content flex-wrap flex-row">
            <div class="pl-2 pt-2 w-100 d-flex justify-content-between">
              <div class="username">
                huuduc99
              </div>
              <div class="time">
                12-02-2020
              </div>
            </div>
            <div class="w-100 pl-2 pt-1">hello</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-10 col-lg-4">
      <!-- Category -->
      <div id="Category">
        <h3 class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">
          Category
        </h3>

        <ul class="menu-category">
          {{#each this.listCat}}
          <li class="menu-category-item">
            <a href="/Category/{{CatID}}" class="d-block">
              {{CatName}}
            </a>
          </li>
          {{/each}}
        </ul>
      </div>
      {{!--  --}}
      <!-- Popular Posts -->
      <div class="p-b-30">
        <h3 class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">
          Popular Post
        </h3>

        <ul class="p-t-35">
          {{#each this.listNewsByCat}}
          <li class="row pb-3">
            <div class="col-sm-4">
              <a href="/news/{{IDPage}}" class="d-block">
                <img src="{{ImgAvatar}}" alt="IMG" class="w-100 h-100">
              </a>
            </div>

            <div class="col-sm-8">
              <div class="paddding">
                <a href="/news/{{IDPage}}" class="most_fh5co_treding_font text-dark">
                  <h6>
                    {{Title}}
                  </h6>
                </a>

                <span class="cl8 txt-center p-b-24">
                  <a href="#" class="most_fh5co_treding_font_123">
                    {{Tags}}
                  </a>
                </span>
              </div>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>

      <!-- Tag -->
      <div id="Tags">
        <h3 class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">
          Tags
        </h3>

        <div>
          {{#each this.AllTags}}
          <a href="/Tags/{{IDTags}}" class="fh5co_tagg">
            {{TagName}}
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>